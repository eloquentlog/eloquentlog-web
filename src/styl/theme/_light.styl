@require '../prtl/_colour'

$light-bg-colour = #ffffff
$light-txt-colour = #222222
$light-line-colour = #838383

body.light,
body.light > .wrapper
  background-color $light-bg-colour
  color $light-txt-colour

  .sidebar
    background-color $light-bg-colour
    border-right 1px solid $light-line-colour

    .inner-header
      .title,
      .version
        color lighten($txt-colour, 52%)

  .content
    form.form
      input[type="email"],
      input[type="password"],
      input[type="text"],
      textarea
        background-color $input-bg-colour
        border 1px solid $input-border-colour
        color $input-txt-colour
