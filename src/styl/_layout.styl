@require './prtl/_colour'

html
  box-sizing border-box
  min-height 100%
  width 100%
  position relative

body
  height 100%
  width 100%

  > .wrapper
    display flex
    flex-direction row
    padding 0
    // cloud container
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    width 100%
    margin 0

  #sidebar
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    overflow-y auto
    overflow-x hidden
    max-width 16.78rem
    margin 0
    // scrollbar
    &::-webkit-scrollbar
      display none
    -ms-overflow-style none
    scrollbar-width none

  #content
    width 100%
    overflow-y auto
    overflow-x clip

  .container
    margin-bottom 0.28rem
    margin-top 0.73rem

    h4.header
      border-bottom 1px solid $header-border-colour
      color $header-txt-colour
      font-size 0.962em
      font-weight 700
      line-height 1.283em
      margin-bottom 1.02rem
      margin-left 0.07rem
      margin-right 0.07rem
      margin-top 0.74rem
      padding-bottom 0.41rem

    h6
      margin-bottom 0.38rem
      margin-top 1.42rem

    p.note
      margin-bottom 1.47rem

  .content
    display flex
    flex-direction column
